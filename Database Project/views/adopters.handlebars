
    <div class="headerdiv"><h2>Adopters</h2></div>

    <div class="outerdiv">
        <h3>Add a New Adopter</h3>
        <div class="innerdiv">
            <form id="addadopterform" action="/adopters" method="post">
                First Name:<br />
                <input type="text" id="fname" name="fname"> <br />

                Last Name:<br />
                <input type="text" id="lname" name="lname"><br />

                Street Address:<br />
                <input type="text" id="saddress" name="saddress" /><br />

                City:<br />
                <input type="text" id="city" name="city" /><br />

                State:<br />
                <input type="text" id="state" name="state" /><br />

                Zipcode:<br />
                <input type="text" id="zip" name="zip" /><br />

                Phone Number:<br />
                <input type="text" id="phone" name="phone" /><br /><br />

                <input id="btnAdopterSubmit" type="submit" value="Submit" />
            </form>
            <br />
        </div>
    </div>

    <h3>Adopters</h3>
    <table id="adopterstable">
        <tr>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Street Address</th>
            <th>City</th>
            <th>State</th>
            <th>Zipcode</th>
            <th>Phone Number</th>
            <th># of Dogs Adopted:</th>
	    <th>Delete</th>
	    <th>Edit</th>
        </tr>
        {{#if adopters}}
        {{#each adopters}}
        <tr>
            <td>{{this.fname}}</td>
            <td>{{this.lname}}</td>
            <td>{{this.saddress}}</td>
            <td>{{this.city}}</td>
            <td>{{this.state}}</td>
            <td>{{this.zip}}</td>
            <td>{{this.phone}}</td>
            <td>{{this.nad}}</td>
            <td><button onclick="deleteAdopter({{this.id}})">Delete</button></td>
            <td><a href="/adopters/{{this.id}}">Edit</a></td>
        </tr>
        {{/each}}
        {{/if}}

    </table>
    <br /><br />
    <script type="text/javascript" src="../js/addAdopter.js"></script>
  